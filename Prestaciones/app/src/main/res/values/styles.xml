<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Drawer" />

    <style name="Drawer.Header">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Drawer.Header.Container">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Drawer.Header.Title">
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="Drawer.Header.Subtitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>

</resources>
