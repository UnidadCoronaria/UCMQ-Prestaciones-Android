<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:background="@color/item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/item_text"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="16dp"
            android:id="@+id/item_watch_label"
            android:layout_marginLeft="10dp"/>


        <ImageView
            android:id="@+id/item_watch_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_note"
            android:visibility="invisible"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:id="@+id/item_watch_check_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_check_image"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/item_watch_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_check_image"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>